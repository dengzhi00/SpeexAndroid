<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.libmspeex.MainActivity" >

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <com.example.speexandroid.view.RecordAnimationView
        android:id="@+id/main_record"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true" />

    <com.example.speexandroid.view.AudioImage
        android:id="@+id/main_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ico_taxing_record" />

</RelativeLayout>